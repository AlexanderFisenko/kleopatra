        %section.row
          %h1
            = link_to "ЗАЛЫ", friendly_egyptian_hall_path
          = link_to "египетский зал", friendly_egyptian_hall_path
          %br/
          = link_to "зеркальный зал", friendly_mirror_hall_path

        %section.row
          %h1
            = link_to "НАШИ УСЛУГИ", friendly_order_path
          = link_to "заказ банкета", friendly_order_path
          %br/
          = link_to 'бронирование даты', friendly_reservation_path
          %br/
          = link_to_unless_current 'сервировка', friendly_serving_path
          %br/
          = link_to_unless_current 'обслуживание', friendly_service_path
          %br/
          = link_to_unless_current 'дополнительные услуги', friendly_additional_service_path

        %section.row
          %h1
            = link_to "НАШИ РЕКОМЕНДАЦИИ", "#"
          ведущие
          %br/
          фотографы
          %br/
          оформители
          %br/
          кондитеры

        %section.row
          %h1
            = link_to "ГАЛЕРЕЯ", friendly_gallery_path

        %section.row
          %h1
            = link_to "ОТЗЫВЫ", friendly_feedback_path

        %section.row
          %h1
            = link_to "КОНТАКТЫ", friendly_contacts_path

