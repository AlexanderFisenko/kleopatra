- content_for :image do
  = image_tag 'gallery/gallery.png'

:javascript
  $("#secondary-nav-substitude").show();

  $.scrollUp({
    scrollName: 'scrollUp', // Element ID
    scrollDistance: '1000', // Distance from top before showing element (px)
    topSpeed: 300, // Speed back to top (ms)
    animation: 'fade', // Fade, slide, none
    animationInSpeed: 200, // Animation in speed (ms)
    animationOutSpeed: 200, // Animation out speed (ms)
    scrollText: '<i class="fa fa-chevron-circle-up"></i>', // Text for element
    activeOverlay: false, // Set CSS color to display scrollUp active point, e.g '#00FFFF'
  });

%article#gallery
  %h1.lined
    галерея
  %section.images
    - @photos.each do |photo|
      %section.image
        = link_to(image_tag(photo.image_url(:small).to_s), image_path(photo.image_url(:large).to_s), class: "fancybox-thumb", rel: "fancybox-thumb")